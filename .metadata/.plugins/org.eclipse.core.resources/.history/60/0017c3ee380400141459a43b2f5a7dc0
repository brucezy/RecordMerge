package com.veeva.record;

import java.io.File;
import java.io.IOException;
import java.util.ArrayList;
import java.util.HashMap;
import java.util.Map;

import org.jsoup.*;
import org.jsoup.nodes.Document;
import org.jsoup.nodes.Element;
import org.jsoup.select.Elements;

public class HTMLRecordModle extends RecordModle implements FileParser {

	Document doc;
	
	public HTMLRecordModle() {
		super();
	}
	
	public void initialize(File input){
		try {
			doc = Jsoup.parse(input, "UTF-8");
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

	@Override
	public void readHeader(File input) {
		Element table = doc.getElementById("table");
		Elements trs = table.getElementsByTag("tr");
		
		for(Element tr: trs){
			Elements ths = tr.getElementsByTag("th");
			
			for(Element th:ths){
				String s = th.text().toString();
				this.recordHeader.add(s);
			}
			
		}
	}

	@Override
	public void readData(File input) {
		
		ArrayList<HashMap<String, String>> recordRow = new ArrayList<HashMap<String, String>>();
		
		Element table = doc.getElementById("table");
		Elements trs = table.getElementsByTag("tr");
		
		for(Element tr: trs){
			Elements tds = tr.getElementsByTag("td");
			
			int i = 0;
			for(Element td:tds){
				String s = td.text().toString();
				HashMap<String, String> keyValue = new HashMap<String, String>();
				keyValue.put(recordHeader.get(i), s);
				recordRow.add(keyValue);
				i++;
			}
			
			this.recordData.add(recordRow);
			recordRow.clear();
		}
	}

}
